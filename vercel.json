{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/$1.js" },
    { "handle": "filesystem" },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors 'self' https://*.sharepoint.com https://sharepoint.com;"
        },
        {
          "key": "X-Frame-Options",
          "value": "ALLOW-FROM https://*.sharepoint.com"
        }
      ]
    }
  ]
}
